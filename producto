    <!-- Scripts -->
    <script>
        // Lógica para el menú móvil
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Lógica para la sección de recetas interactivas
        const recipeButtons = document.querySelectorAll('.recipe-btn');
        const recipeTitle = document.getElementById('recipe-title');
        const recipeAnalysis = document.getElementById('recipe-analysis');
        const recipeIngredientsContainer = document.getElementById('recipe-ingredients');
        const chartCanvas = document.getElementById('recipeChart');
        let recipeChart;

        const recipesData = {
            pollo: {
                title: 'Fórmula Completa de Pollo',
                chartData: [60, 15, 10, 15],
                analysis: 'Proteína cruda (min): 15%, Grasa cruda (min): 10%, Fibra cruda (max): 2%, Humedad (max): 70%',
                ingredients: [
                    { name: 'Hueso Carnoso de Pollo (60%)', purpose: 'Fuente principal de calcio y fósforo para huesos y dientes fuertes.' },
                    { name: 'Carne Muscular de Pollo (15%)', purpose: 'Aporta proteína de alta calidad para el desarrollo muscular y energía.' },
                    { name: 'Órganos (Hígado, Corazón) (10%)', purpose: 'Concentrado de vitaminas A, B y minerales esenciales como hierro y zinc.' },
                    { name: 'Mix de Vegetales y Frutas (15%)', purpose: 'Provee fibra, antioxidantes y fitonutrientes para el sistema inmune.' }
                ]
            },
            res: {
                title: 'Fórmula Completa de Res',
                chartData: [55, 20, 10, 15],
                analysis: 'Proteína cruda (min): 17%, Grasa cruda (min): 12%, Fibra cruda (max): 2%, Humedad (max): 68%',
                ingredients: [
                    { name: 'Hueso Carnoso de Res (55%)', purpose: 'Excelente fuente de calcio, fósforo y grasas saludables.' },
                    { name: 'Carne Muscular de Res (20%)', purpose: 'Rica en hierro y proteína para una masa muscular magra y vitalidad.' },
                    { name: 'Órganos (Hígado, Riñón) (10%)', purpose: 'Aporte denso de vitaminas del complejo B y minerales traza.' },
                    { name: 'Mix de Vegetales y Frutas (15%)', purpose: 'Fibra para la digestión y un espectro de vitaminas y antioxidantes.' }
                ]
            },
            cordero: {
                title: 'Fórmula Hipoalergénica de Cordero',
                chartData: [50, 25, 10, 15],
                analysis: 'Proteína cruda (min): 16%, Grasa cruda (min): 14%, Fibra cruda (max): 2%, Humedad (max): 67%',
                ingredients: [
                    { name: 'Hueso Carnoso de Cordero (50%)', purpose: 'Ideal para perros sensibles, fuente de calcio y minerales esenciales.' },
                    { name: 'Carne Muscular de Cordero (25%)', purpose: 'Proteína de alta digestibilidad, excelente para la piel y el pelaje.' },
                    { name: 'Órganos (Hígado, Bazo) (10%)', purpose: 'Concentrado natural de nutrientes vitales para la función orgánica.' },
                    { name: 'Mix de Vegetales y Frutas (15%)', purpose: 'Fuente de prebióticos y vitaminas para una salud integral.' }
                ]
            }
        };

        function updateRecipeView(recipeKey) {
            const data = recipesData[recipeKey];

            // Actualizar textos
            recipeTitle.textContent = data.title;
            recipeAnalysis.textContent = data.analysis;

            // Actualizar lista de ingredientes
            recipeIngredientsContainer.innerHTML = '';
            data.ingredients.forEach(ing => {
                const div = document.createElement('div');
                div.className = 'p-3 bg-gray-50 rounded-md border border-gray-200';
                div.innerHTML = `<p class="font-semibold">${ing.name}</p><p class="text-sm text-gray-600">${ing.purpose}</p>`;
                recipeIngredientsContainer.appendChild(div);
            });
            
            // Actualizar el gráfico
            if (recipeChart) {
                recipeChart.data.datasets[0].data = data.chartData;
                recipeChart.update();
            } else {
                recipeChart = new Chart(chartCanvas, {
                    type: 'doughnut',
                    data: {
                        labels: ['Hueso Carnoso', 'Carne Muscular', 'Órganos', 'Vegetales/Frutas'],
                        datasets: [{
                            data: data.chartData,
                            backgroundColor: ['#A3B18A', '#588157', '#3A5A40', '#8a9a7b'],
                            borderColor: '#ffffff',
                            borderWidth: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        cutout: '70%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed !== null) {
                                            label += context.parsed + '%';
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }
        }

        recipeButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Gestionar estado activo del botón
                recipeButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                
                // Actualizar la vista
                const recipeKey = button.getAttribute('data-recipe');
                updateRecipeView(recipeKey);
            });
        });

        // Carga inicial
        updateRecipeView('pollo');
    </script>
</body>
</html>
